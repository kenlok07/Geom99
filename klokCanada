  <script>
  require([
    "esri/config",
    "esri/Map",
    "esri/views/MapView",

    "esri/layers/FeatureLayer"

  ], function(esriConfig,Map, MapView, FeatureLayer) {
    
  esriConfig.apiKey = "AAPKa02949cf8b4945f7a9f87d291aa41d59Q0JX1HnFlvc6GWehkXbsxdgspDadm83wtVaHKliEorKBWd5A4TN39i2H6B-9WAfL";
  
  const map = new Map({
    basemap: "arcgis-topographic"
  });
  
    const view = new MapView({
    container: "viewDiv",
    map: map,
    center: [-118.80543,34.02700],
    zoom: 3
  });  
  
  const klokCanada = new FeatureLayer({
    url: "https://luna.flemingcollege.ca/arcgis/rest/services/Geom99lab1/klokCanada/MapServer/0"
  });
  
  map.add(klokCanada, 0);

  });
</script>
